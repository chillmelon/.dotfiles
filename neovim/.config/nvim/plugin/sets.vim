" essentials
set rnu
set nu
set hidden
set noerrorbells
set nowrap
set scrolloff=8
set autochdir
set clipboard=unnamedplus
" theme
colorscheme nord
highlight Normal guibg=none
" tab
set tabstop=2 softtabstop=2
set shiftwidth=2
set expandtab
set smartindent
" history
set noswapfile
set nobackup
set undodir=~/.vim/undodir
set undofile
" search
set ignorecase
set smartcase
set incsearch
set nohlsearch
" window
set splitbelow splitright
" others
set signcolumn=yes
set colorcolumn=80
set termguicolors
