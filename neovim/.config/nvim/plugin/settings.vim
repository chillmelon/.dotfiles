" essentials
set nu
set hidden
set noerrorbells
set nowrap
set scrolloff=8
"set autochdir
set clipboard=unnamedplus
set nocompatible
filetype plugin indent on
syntax on
"highlight Normal guibg=none
" tab
set tabstop=2 softtabstop=2
set shiftwidth=2
set noexpandtab
set smartindent
" history
set noswapfile
set nobackup
set undodir=~/.vim/undodir
set undofile
" search
set ignorecase
set smartcase
set incsearch
set nohlsearch
" window
set splitbelow splitright
" others
set signcolumn=yes
set colorcolumn=80
